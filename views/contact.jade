	script(type='text/javascript').
		var map;
			function initMap() {
			var myLatLng = {lat: 13.792931, lng: 100.544466};
				map = new google.maps.Map(document.getElementById('map'), {
				center: {lat: 13.792931, lng: 100.544466},
				zoom: 17
			});
			var marker = new google.maps.Marker({
				position: myLatLng,
				map: map,
				title: '33 SPACE PRADIPAT'
			});
		}

