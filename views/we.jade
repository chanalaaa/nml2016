extends ./layout/_base
block css
	link(rel="stylesheet" href="./css/swiper.min.css")
block var
	-var currentPage = "we"

block title
	title WE | neumerlin 

block body
	include ./layout/_header   
	//- content 
	//pageHeader
	.pageHeader
		.pageHeader_block
			.pageHeader_text-l
				p
					| value 
					span.-text-purper
						| and
					| belief

	// section 1
	section.section_single.longRight
		.row
			.col-12.col-md-6.-block-center.section-block
				.content
					.content-desc
						h2 
							| CREATIFI
							span.-text-purper CIENCY
						p.
							Strategic creativity opens up new possibilities for communication solution. We put effectiveness first yet never compromise efficiency of executions. Our mission is to strategically develop an ‘effective’ creative Idea that can be executed in the most ‘efficient’ manner. To us, this is known as CREATIFICIENCY<br> <br>

							Even a great works today regularly need well-thought-through experiments to become greater works tomorrow. Not only it’s something we believe in, it is also a fun thing to do!<br><br>

							
							We are rather called Business Partner than Agency. Through the right blend of people in our boutique, we storm in idea from both sides of our brains to hand in business solution to our partners. We make things happen. Things that can only be created with CREATIFICIENCY.

	// we.longRight
	section.section_single.we.longRight
		.row
			.col-12.col-md-6.-block-center.section-block
				.content
					.content-desc
						.we_leftBlock
							.section-title
								p what we do
						.we_rightBlock
							h2 
								| We
							p
								|  PROVIDE COMMUNICATION <br>
								| SOLUTIONS 
								span.-text-black THAT DRIVE BUSINESS

	// fourcolumn
	section.section_fourcolumn
		.row
			.col-12.-block-center.section-block
				.content
					ul.fourcolumn_block
						li.fourcolumn_item 
							p.fourcolumn-text Contracted Marketing Communication Service
						li.fourcolumn_item 
							p.fourcolumn-text branding and product concept development
						li.fourcolumn_item 
							p.fourcolumn-text Communication Strategy 
								span.-text-white and 
								| Planning
						li.fourcolumn_item 
							p.fourcolumn-text Concept Testing and<br> Insight Research
						li.fourcolumn_item 
							p.fourcolumn-text Integrated Communication Campaign
						li.fourcolumn_item
							p.fourcolumn-text Creative and<br> Concept Works
						li.fourcolumn_item 
							p.fourcolumn-text Creative <br> Production
						li.fourcolumn_item 
							p.fourcolumn-text Omni-Channel Media

	// we_client
	section.section_side.we_client
		.row
			.col-12.-block-center.section-block
				.leftside_title.section-block
					.section-title
						p trust me
				.content
					.swiper-container.we
						.swiper-wrapper
							.swiper-slide
								img(src="https://unsplash.it/1280/800?image=70", alt="")
							.swiper-slide
								img(src="https://unsplash.it/1280/800?image=96", alt="")
							.swiper-slide
								img(src="http://placehold.it/1280x800", alt="")
							.swiper-slide
								img(src="https://unsplash.it/1280/800?image=39", alt="")


	// gangster
	section.section_singleLong.gangster
		.row
			.col-12.section-block.gangster-block
				//-.bg-gray
				.section-title
					p crew
				.swiper-container.gangster
					.swiper-wrapper
						.swiper-slide
							img(src="./images/gangster/p1.jpg", alt="")
							span
								strong Leonardo da Vinci <br> 
								| Fuckin' creative
						.swiper-slide
							img(src="./images/gangster/p2.jpg", alt="")
							span
								strong Steve Jobs <br> 
								| GOD
						
						.swiper-slide
							img(src="./images/gangster/p3.jpg", alt="")
							span
								strong Chris Martin <br> 
								| Lead vocalist of coldplay
						.swiper-slide
							img(src="./images/gangster/p4.jpg", alt="")
							span
								strong Chanala Wilangka <br> 
								| noob
						.swiper-slide
							img(src="./images/gangster/p5.jpg", alt="")
							span
								strong Yuko Yamashita <br> 
								| Straight hair specialist
						.swiper-slide
							img(src="http://placehold.it/600x800", alt="")
						.swiper-slide
							img(src="http://placehold.it/600x800", alt="")
						.swiper-slide
							img(src="http://placehold.it/600x800", alt="")
						.swiper-slide
							img(src="http://placehold.it/600x800", alt="")
						.swiper-slide
							img(src="http://placehold.it/600x800", alt="")
						.swiper-slide
							img(src="http://placehold.it/600x800?text=last", alt="")
			.col-12.col-md-6.-block-center.section-block
				.content
					.content-desc
						p.
							Through the power of diversity, we can achieve challenging goals. We work, experiment and have fun together in stretching for the best result in crafting our communication work. We leverage others’ strengths in team-working to crete a synergistic communication solution that answers business objectives. Blended together - we summon the power of innovated creativity
						h2 
							span Diversity.
							span Synergy.
							span Innovated Creativity.

	//- end content
	include ./layout/_footer


block js
	script(type="text/javascript", src="./js/vendors/swiper.min.js")
	script(type='text/javascript').
		var swiper = new Swiper('.swiper-container.we', {
		slidesPerView: 1.15,
		paginationClickable: true,
		freeMode:true,
		grabCursor: true,
		breakpoints: {
			800: {
						slidesPerView: 1.16,},
			490: {
						slidesPerView: 1.22, }
				}
		});
	script(type='text/javascript').
		var swiper = new Swiper('.swiper-container.gangster', {
